<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:weightSum="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:text="课程内容"
            android:textSize="12dp"
            android:textColor="@color/colorCourseText"
            android:gravity="center|left"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorCourseText"
        />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:weightSum="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:text="课程名称"
            android:textSize="18dp"
            android:gravity="center|left"/>
        <EditText
            android:id="@+id/addCourse_courseName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:hint="(未填写)"
            android:textColorHint="@color/colorCourseAddHint"
            android:background="#00000000"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#6F000000"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:weightSum="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:text="老师"
            android:textSize="18dp"
            android:gravity="center|left"/>
        <EditText
            android:id="@+id/addCourse_courseTeachers"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:hint="(未填写)"
            android:textColorHint="@color/colorCourseAddHint"
            android:background="#00000000"/>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#6F000000"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:weightSum="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:text="周数"
            android:textSize="18dp"
            android:gravity="center|left"/>
        <EditText
            android:id="@+id/addCourse_weeks"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:hint="(未填写)"
            android:textColorHint="@color/colorCourseAddHint"
            android:background="#00000000"/>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#6F000000"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:text="时间选择"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.17"
        android:weightSum="1"
        android:paddingBottom="10dp">
        <widget.WheelView
            android:id="@+id/courseWheelWeekday"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.33333" />
        <widget.WheelView
            android:id="@+id/courseWheelStart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.33333"/>
        <widget.WheelView
            android:id="@+id/courseWheelEnd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.333333"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定"
        android:layout_gravity="center"
        android:background="#00FFFFFF"/>


</LinearLayout>